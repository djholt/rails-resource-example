<h1>All people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th></th>
  </tr>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td> 
      <td><%= person.age %></td> 
      <td>
        <%= link_to "Show", person_path(person) %>
        <%= link_to "Edit", edit_person_path(person) %>
        <%= link_to "Delete", person_path(person), :method => 'delete' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New Person", new_person_path %>
